{
  "compilerOptions" : {
    "module"                         : "es2015",
    "moduleResolution"               : "node",
    "noImplicitAny"                  : true,
    "suppressImplicitAnyIndexErrors" : true,
    "noEmitOnError"                  : true,
    "removeComments"                 : true,
    "sourceMap"                      : true,
    "target"                         : "es5",
    "lib"                            : [ "es2015", "dom" ],
    "jsx"                            : "react",
    "outDir"                         : "./build/"
  },
  "include" : [
    "src/ts/**/*"
  ]
}